<%-include('./partials/header')%>  
<main>

<div class="col-md-7 col-lg-8">
    <h3 class="mb-3">Billing address</h3>
    <form class="checkout-form" action="/checkout" method="post">

        <div>
      <div class="row g-3">
        <div class="col-sm-6">
          <label for="firstName" class="form-label">First name</label>
          <input type="text" name="firstname"  id="firstName" placeholder="" value="" required>
          </div>
        </div>

        <div class="col-sm-6">
          <label for="lastName" class="form-label">Last name</label>
          <input type="text"  name="lastname" id="lastName" placeholder="" value="" required>
          
        </div>

        <div class="col-sm-6">
          <label for="phone" class="form-label">Phone Number</label>
            <input type="number" id="username" placeholder="Phone Number" >
          
    
        </div>

        <div class="col-sm-6">
          <label for="email" class="form-label">Email <span class="text-muted">(Optional)</span></label>
          <input type="email" id="email" placeholder="you@example.com">
          
        </div>

        <div class="col-sm-6">
          <label for="address" class="form-label">Address</label>
          <input type="text" name="address" id="address" placeholder="1234 Main St" required>
        </div>
     </div>
        <div>
        <div class="col-sm-6">
          <label for="address2" class="form-label">Address 2 <span class="text-muted">(Optional)</span></label>
          <input type="text" name="apartment" id="address2" placeholder="Apartment or suite">
        </div>

        <div class="col-sm-6">
          <label for="country" class="form-label">Country</label>
          <input type="text" id="country" name="country"  >
        </div>

        <div class="col-sm-6">
          <label for="state" class="form-label">State</label>
            <input type="text" id="state" name="state">
        </div>

        <div class="col-sm-6">
          <label for="zip" class="form-label">Zip</label>
          <input type="text" name="zip" id="zip" placeholder="" required >
        </div>
        
        <button class="btn btn-primary" type="submit">Place Order</button>
        
        
        
    </form>
    </div>
</div>
<h1 class="total-cost">Total Cost:   <strong> $<%=cost%> </strong></h1>
</main>

<%-include('./partials/footer')%>  